{
  "manifest_version": 3,
  "name": "Leafly Search",
  "version": "1.0.0",
  "description": "Quickly search for strains on Leafly.com",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://www.leafly.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
